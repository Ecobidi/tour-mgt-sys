<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-banner text-white">
  <h3 class="title">TMS - Available Tour Packages</h3>
</div>

<div class="container">
  <h3 class="mb-3">Tours Available</h3>
  <% tours.forEach(m => { %>
    <div class="row py-2 bg-white" style="margin-top: 2em; box-shadow: 0px 0px 5px -1px rgb(0 0 0 / 37%);">
      <div class="col-md-3">
        <img src='<%= m.tour_featured_image || "/images/md-banner.jpg" %>' class="img-responsive" alt="" style="max-height: 165px; width: 100%; ">
      </div>
      <div class="col-md-6">
        <h5>Tour Name: <%= m.tour_name %></h5>
        <h6><strong>Package Type : <%= m.tour_type %></strong></h6>
        <p class="text-muted mb-0"><b>Location :</b> <%= m.tour_location %></p>
        <p class="text-muted"><b>Features</b>  <%= m.tour_features %></p>
      </div>
      <div class="col-md-3 d-flex flex-wrap align-self-center justify-content-center">
        <h5 class="w-100 text-center mb-2">NGN <%= m.tour_price %></h5>
        <div>
          <a href='/tour-packages/<%= m.serial_number %>' class="btn btn-dark btn-sm">Details</a>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  <% }) %>  
</div>

<%- include ('../partials/client-bottom') %>